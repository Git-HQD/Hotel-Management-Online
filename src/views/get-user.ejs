<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GET USERS</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
      }

      .btn-edit {
        outline: none;
        border: none;
        font-size: 16px;
        padding: 1px 10px;
        background: rgb(144, 144, 223);
        height: 25px;
        width: 50px;
        border-radius: 5px;
        cursor: pointer;
        margin-left: 5px;
        margin-block: 5px;
        margin-top: -2px;
      }
      .btn-delete {
        outline: none;
        border: none;
        font-size: 16px;
        padding: 1px 6px;
        background: rgb(221, 113, 113);
        height: 25px;
        width: 58px;
        border-radius: 5px;
        cursor: pointer;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <form class="row g-3" action="/deleteUser" method="POST"></form>
        <table class="table table-striped table-hover">
          <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Action</th>
          </tr>

          <% for(let i=0; i < dataTable.length; i++) { %>
          <tr>
            <td><%= dataTable[i].firstName %></td>
            <td><%= dataTable[i].lastName %></td>
            <td><%= dataTable[i].email %></td>
            <td><%= dataTable[i].address %></td>
            <td>
              <a
                href="/editUser?id=<%= dataTable[i].id %>"
                class="btn-edit"
                type="button"
                >Edit</a
              >
              <input
                name="id"
                value="<%= dataTable[i].id %>"
                type="text"
                hidden
              />
              <a
                href="/deleteUser?id=<%= dataTable[i].id %>"
                class="btn-delete"
                type="button"
                >Delete</a
              >
            </td>
          </tr>
          <% } %>
        </table>
      </div>
    </div>
  </body>
</html>
